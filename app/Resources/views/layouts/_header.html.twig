<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('core_homepage') }}">{{ 'cooperation.app_name'|trans }}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.user %}
                    <li class="nav-item {{ app.request.attributes.get('_route') == 'core_homepage' ? 'active' : '' }}">
                        <a class="nav-link" href="{{ path('core_homepage') }}">{{ 'cooperation.ui.home'|trans }}<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'cooperation.lists.lists'|trans }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.add'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.delmod'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.generalview'|trans }}</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'cooperation.groups.groups'|trans }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.add'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.delmod'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.generalview'|trans }}</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'cooperation.accounts.accounts'|trans }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.add'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.delmod'|trans }}</a>
                            <a class="dropdown-item" href="#">{{ 'cooperation.links.generalview'|trans }}</a>
                        </div>
                    </li>
                    {% endif %}
            </ul>
            <ul class="navbar-nav">
                {% if app.user %}
                    <span class="navbar-text">
                        {{ 'cooperation.ui.welcome_user'|trans({'name': app.user.username}) }}
                    </span>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ 'cooperation.ui.my_account'|trans }}
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                            <h6 class="dropdown-header">{{ 'cooperation.ui.my_account'|trans }}</h6>
                            <span class="dropdown-item">{{ app.user.email }}</span>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">{{ 'cooperation.ui.actions'|trans }}</h6>
                            <a class="dropdown-item text-danger" href="{{ path('user_logout') }}">{{ 'cooperation.ui.logout'|trans }}</a>
                        </div>
                    </li>
                {% else %}
                    <a class="nav-item nav-link" href="{{ path('user_login') }}">{{ 'cooperation.form.connect'|trans }}</a>
                    <a class="nav-item nav-link" href="{{ path('user_register') }}">{{ 'cooperation.form.register'|trans }}</a>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>

{% extends "base.html.twig" %}

{% block title %}
    {{ 'cooperation.login.login_page'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'cooperation.login.connect_to_app'|trans }}</h1>
    <form action="{{ path('user_login') }}" method="post">
        <label for="username">{{ 'cooperation.form.login'|trans }}</label>
        <input class="form-control" type="text" name="_username" id="username" placeholder="{{ 'cooperation.form.login'|trans }}"/>

        <label>{{ 'cooperation.form.password'|trans }}</label>
        <input type="password" name="_password" id="password" placeholder="{{ 'cooperation.form.password'|trans }}"/>

        <button type="submit">Login</button>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </form>
{% endblock %}

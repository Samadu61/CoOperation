{% extends 'base.html.twig' %}

{% block title %}
    {{ 'cooperation.login.login_page'|trans }}
{% endblock %}

{% block body %}
    <div class="card">
        {{ form_start(form) }}
        <div class="card-header">
            <h3>{{ 'cooperation.register.create_new_account'|trans }}</h3>
        </div>
        <div class="card-body">
            {{ form_row(form.username) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-6">
                    <span>{{ 'cooperation.ui.already_an_account'|trans }}</span> <a href="{{ path('user_login') }}">{{ 'cooperation.ui.sign_in'|trans }}</a>
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.save, { 'label': 'cooperation.form.register'|trans}) }}
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
